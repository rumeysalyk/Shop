    <link href="~/myTheme/css/main.css" rel="stylesheet" />
    <title>R's Shop</title>
    <link rel="icon" href="~/myTheme/images/iconR-removebg-preview.png">

</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <nav id="navbar">
                <h1 class="logo">R's Shop</h1>
                <ul>
                    <li><a href="#">Fırsat</a></li>
                    <li><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                    <li><a href="#">Sepetim</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!--
        Categorynavbar : Bu navbar diğer websitelerdeki gibi statik bir navbar ve En popular olanlar gibi düşünüldü.
    -->

    <nav id="navbar" class="category-navbar">
        <ul>
            <li><a href="#">Kitap</a></li>
            <li><a href="#">Kırtasiye</a></li>
            <li><a href="#">Dergi</a></li>
            <li><a href="#">Çocuk Kitapları</a></li>
            <li><a href="#">Elektronik</a></li>
            <li><a href="#">Oyuncak</a></li>
        </ul>
    </nav>

    <div id="main">

        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="container mt-5">
        <footer class="mt-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
